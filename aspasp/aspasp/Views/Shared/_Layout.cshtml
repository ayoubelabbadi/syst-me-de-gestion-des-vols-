<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title | AirFlight - Admin Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="AirFlight Admin Dashboard">
    <meta name="author" content="AirFlight">

    <!-- App favicon -->
    <link rel="shortcut icon" href="~/Content/assets/images/favicon.ico">

    <!-- Plugin CSS -->
    <link href="~/Content/assets/libs/jsvectormap/css/jsvectormap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/libs/swiper/swiper-bundle.min.css" rel="stylesheet" type="text/css">

    <!-- Bootstrap CSS -->
    <link href="~/Content/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />

    <!-- Icons CSS -->
    <link href="~/Content/assets/css/icons.min.css" rel="stylesheet" type="text/css" />

    <!-- App CSS -->
    <link href="~/Content/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />

    <!-- Custom CSS for this application -->
    <style>
        .navbar-brand-box .logo-txt {
            font-weight: 600;
            font-size: 18px;
        }

        .topnav .navbar-nav .nav-item .nav-link.active {
            color: #007bff !important;
            font-weight: 600;
        }

        .page-content {
            min-height: calc(100vh - 200px);
        }

        /* Fix for navigation active states */
        .navbar-nav .nav-item .nav-link:hover {
            color: #007bff;
        }

        /* Ensure proper loading states */
        .main-content {
            opacity: 1;
            transition: opacity 0.3s ease;
        }

        .loading .main-content {
            opacity: 0.7;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>

<body data-layout="horizontal" data-topbar="dark">
    <!-- Begin page -->
    <div id="layout-wrapper">

        <header id="page-topbar">
            <div class="navbar-header">
                <div class="d-flex">
                    <!-- LOGO -->
                    <div class="navbar-brand-box">
                        <a href="@Url.Action("Index", "Home")" class="logo logo-dark">
                            <span class="logo-sm">
                                <img src="~/Content/assets/images/logo-sm.svg" alt="AirFlight" height="26">
                            </span>
                            <span class="logo-lg">
                                <img src="~/Content/assets/images/logo-sm.svg" alt="AirFlight" height="26">
                                <span class="logo-txt">AirFlight</span>
                            </span>
                        </a>

                        <a href="@Url.Action("Index", "Home")" class="logo logo-light">
                            <span class="logo-sm">
                                <img src="~/Content/assets/images/logo-sm.svg" alt="AirFlight" height="26">
                            </span>
                            <span class="logo-lg">
                                <img src="~/Content/assets/images/logo-sm.svg" alt="AirFlight" height="26">
                                <span class="logo-txt">AirFlight</span>
                            </span>
                        </a>
                    </div>

                    <button type="button" class="btn btn-sm px-3 font-size-16 d-lg-none header-item"
                            data-bs-toggle="collapse" id="horimenu-btn" data-bs-target="#topnav-menu-content">
                        <i class="fa fa-fw fa-bars"></i>
                    </button>

                    <div class="topnav">
                        <nav class="navbar navbar-light navbar-expand-lg topnav-menu">
                            <div class="collapse navbar-collapse" id="topnav-menu-content">
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a class="nav-link arrow-none @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")"
                                           href="@Url.Action("Index", "Home")" id="topnav-dashboard">
                                            <i class="bx bx-home-circle icon"></i>
                                            <span data-key="t-dashboard">Home</span>
                                        </a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link arrow-none @(ViewContext.RouteData.Values["Controller"].ToString() == "Avion" ? "active" : "")"
                                           href="@Url.Action("Index", "Avion")" id="topnav-avion">
                                            <i class="bx bx-tone icon"></i>
                                            <span data-key="t-elements">Plane</span>
                                        </a>
                                    </li>

                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle arrow-none @(ViewContext.RouteData.Values["Controller"].ToString() == "Passenger" ? "active" : "")"
                                           href="#" id="topnav-passenger" role="button"
                                           data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="bx bx-customize icon"></i>
                                            <span data-key="t-apps">Passenger</span>
                                            <div class="arrow-down"></div>
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="topnav-passenger">
                                            <a href="@Url.Action("Index", "Passager")" class="dropdown-item">All Passengers</a>
                                            <a href="@Url.Action("Create", "Passager")" class="dropdown-item">Add Passenger</a>
                                        </div>
                                    </li>

                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle arrow-none @(ViewContext.RouteData.Values["Controller"].ToString() == "Flight" ? "active" : "")"
                                           href="#" id="topnav-flight" role="button"
                                           data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="bx bx-layer icon"></i>
                                            <span data-key="t-components">Flight</span>
                                            <div class="arrow-down"></div>
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="topnav-flight">
                                            <a href="@Url.Action("Index", "Vol")" class="dropdown-item">All Flights</a>
                                            <a href="@Url.Action("Create", "Vol")" class="dropdown-item">Schedule Flight</a>
                                        </div>
                                    </li>

                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle arrow-none @(ViewContext.RouteData.Values["Controller"].ToString() == "Pilot" ? "active" : "")"
                                           href="#" id="topnav-pilot" role="button"
                                           data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="bx bx-file icon"></i>
                                            <span data-key="t-pages">Pilot</span>
                                            <div class="arrow-down"></div>
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="topnav-pilot">
                                            <a href="@Url.Action("Index", "Pilote")" class="dropdown-item">All Pilots</a>
                                            <a href="@Url.Action("Create", "Pilote")" class="dropdown-item">Add Pilot</a>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>

                <div class="d-flex">
                    <!-- Search Dropdown -->
                    

                    <!-- Notifications -->
                   

                    <!-- Settings -->
                    

                    <!-- User Profile -->
                    
                </div>
            </div>

            <!-- Breadcrumb Section -->
            <div class="collapse show dash-content" id="dashtoggle">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box d-flex align-items-center justify-content-between">
                                <h4 class="mb-0">@(ViewBag.PageTitle ?? "Dashboard")</h4>
                                <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item">
                                            <a href="@Url.Action("Index", "Home")">Dashboard</a>
                                        </li>
                                        @if (ViewBag.BreadcrumbItems != null)
                                        {
                                            foreach (var item in (List<dynamic>)ViewBag.BreadcrumbItems)
                                            {
                                                if (item.IsActive)
                                                {
                                                    <li class="breadcrumb-item active">@item.Title</li>
                                                }
                                                else
                                                {
                                                    <li class="breadcrumb-item">
                                                        <a href="@item.Url">@item.Title</a>
                                                    </li>
                                                }
                                            }
                                        }
                                        else
                                        {
                                            <li class="breadcrumb-item active">@(ViewBag.PageTitle ?? "Home")</li>
                                        }
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Toggle Icon -->
            <div>
                <a class="dash-troggle-icon" id="dash-troggle-icon" data-bs-toggle="collapse"
                   href="#dashtoggle" aria-expanded="true" aria-controls="dashtoggle">
                    <i class="bx bx-up-arrow-alt"></i>
                </a>
            </div>
        </header>

        <div class="hori-overlay"></div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="page-content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
        </div>
        <!-- End Page-content -->

        <footer class="footer">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-6">
                        <script>document.write(new Date().getFullYear())</script> &copy; AirFlight.
                    </div>
                    <div class="col-sm-6">
                        <div class="text-sm-end d-none d-sm-block">
                            Crafted with <i class="mdi mdi-heart text-danger"></i> for Aviation Management
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <!-- end main content-->
    <!-- Right Sidebar -->
    <div class="right-bar">
        <div data-simplebar class="h-100">
            <div class="rightbar-title d-flex align-items-center p-3">
                <h5 class="m-0 me-2">Theme Customizer</h5>
                <a href="javascript:void(0);" class="right-bar-toggle-close ms-auto">
                    <i class="mdi mdi-close noti-icon"></i>
                </a>
            </div>

            <hr class="m-0" />

            <div class="p-4">
                <h6 class="mb-3">Layout</h6>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="layout"
                           id="layout-vertical" value="vertical">
                    <label class="form-check-label" for="layout-vertical">Vertical</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="layout"
                           id="layout-horizontal" value="horizontal" checked>
                    <label class="form-check-label" for="layout-horizontal">Horizontal</label>
                </div>

                <h6 class="mt-4 mb-3">Layout Mode</h6>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="layout-mode"
                           id="layout-mode-light" value="light" checked>
                    <label class="form-check-label" for="layout-mode-light">Light</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="layout-mode"
                           id="layout-mode-dark" value="dark">
                    <label class="form-check-label" for="layout-mode-dark">Dark</label>
                </div>

                <h6 class="mt-4 mb-3">Layout Width</h6>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="layout-width"
                           id="layout-width-fluid" value="fluid" checked
                           onchange="document.body.setAttribute('data-layout-size', 'fluid')">
                    <label class="form-check-label" for="layout-width-fluid">Fluid</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="layout-width"
                           id="layout-width-boxed" value="boxed"
                           onchange="document.body.setAttribute('data-layout-size', 'boxed')">
                    <label class="form-check-label" for="layout-width-boxed">Boxed</label>
                </div>

                <h6 class="mt-4 mb-3">Topbar Color</h6>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="topbar-color"
                           id="topbar-color-light" value="light"
                           onchange="document.body.setAttribute('data-topbar', 'light')">
                    <label class="form-check-label" for="topbar-color-light">Light</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="topbar-color"
                           id="topbar-color-dark" value="dark" checked
                           onchange="document.body.setAttribute('data-topbar', 'dark')">
                    <label class="form-check-label" for="topbar-color-dark">Dark</label>
                </div>
            </div>
        </div>
    </div>
    <!-- /Right-bar -->
    <!-- Right bar overlay-->
    <div class="rightbar-overlay"></div>

    <!-- JAVASCRIPT -->
    <script src="~/Content/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/assets/libs/metismenujs/metismenujs.min.js"></script>
    <script src="~/Content/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/Content/assets/libs/feather-icons/feather.min.js"></script>

    <!-- Plugins -->
    <script src="~/Content/assets/libs/apexcharts/apexcharts.min.js"></script>
    <script src="~/Content/assets/libs/jsvectormap/js/jsvectormap.min.js"></script>
    <script src="~/Content/assets/libs/jsvectormap/maps/world-merc.js"></script>
    <script src="~/Content/assets/libs/swiper/swiper-bundle.min.js"></script>

    <!-- Dashboard init -->
    <script src="~/Content/assets/js/pages/dashboard.init.js"></script>

    <!-- App js -->
    <script src="~/Content/assets/js/app.js"></script>

    <!-- Custom Script -->
    <script>
        $(document).ready(function () {
            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();

            // Initialize popovers
            $('[data-bs-toggle="popover"]').popover();

            // Handle loading states
            $('a[href]:not([href="#"]):not([data-bs-toggle])').on('click', function () {
                $('body').addClass('loading');
            });

            // Remove loading state when page loads
            $(window).on('load', function () {
                $('body').removeClass('loading');
            });

            // Save theme preferences
            $('input[name="layout"], input[name="layout-mode"], input[name="layout-width"], input[name="topbar-color"]').on('change', function () {
                var preferences = {
                    layout: $('input[name="layout"]:checked').val(),
                    layoutMode: $('input[name="layout-mode"]:checked').val(),
                    layoutWidth: $('input[name="layout-width"]:checked').val(),
                    topbarColor: $('input[name="topbar-color"]:checked').val()
                };
                localStorage.setItem('airflight-theme-preferences', JSON.stringify(preferences));
            });

            // Load theme preferences
            var savedPreferences = localStorage.getItem('airflight-theme-preferences');
            if (savedPreferences) {
                try {
                    var prefs = JSON.parse(savedPreferences);
                    if (prefs.layout) $('input[name="layout"][value="' + prefs.layout + '"]').prop('checked', true);
                    if (prefs.layoutMode) $('input[name="layout-mode"][value="' + prefs.layoutMode + '"]').prop('checked', true);
                    if (prefs.layoutWidth) $('input[name="layout-width"][value="' + prefs.layoutWidth + '"]').prop('checked', true);
                    if (prefs.topbarColor) $('input[name="topbar-color"][value="' + prefs.topbarColor + '"]').prop('checked', true);
                } catch (e) {
                    console.warn('Could not load theme preferences:', e);
                }
            }
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>