@model aspasp.Models.Avion
@{
    ViewBag.Title = "Delete Plane";
}

<h2>@ViewBag.Title</h2>
<h3>Are you sure you want to delete this airplane?</h3>

<div>
    <h4></h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>ID</dt>
        <dd>@Model.Id</dd>

        <dt>Model</dt>
        <dd>@Html.DisplayFor(m => m.Modele)</dd>

        <dt>Capacity</dt>
        <dd>@Html.DisplayFor(m => m.Capacite)</dd>
    </dl>
</div>

@using (Html.BeginForm("Delete", "Avion", new { id = Model.Id }, FormMethod.Post, new { @class = "form-inline" }))
{
    @Html.AntiForgeryToken()
    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this aircraft?');" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
    </div>
}