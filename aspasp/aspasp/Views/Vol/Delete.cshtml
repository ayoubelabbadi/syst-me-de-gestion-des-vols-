@model Aeroport.Models.Vol

@{
    ViewBag.Title = "Delete the flight";
}

<h2>Delete the flight</h2>

<h4>Are you sure you want to delete this flight? ?</h4>
<hr />

<dl class="dl-horizontal">
    <dt>Departure</dt>
    <dd>@Model.VilleDepart</dd>

    <dt>Arrival</dt>
    <dd>@Model.VilleArrivee</dd>

    <dt>Date</dt>
    <dd>@Model.DateVol.ToString("f")</dd>

    <dt>Airplane</dt>
    <dd>@Model.Avion?.Modele</dd>

    <dt>Pilot</dt>
    <dd>@Model.Pilote?.Nom</dd>
</dl>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-actions">
        <input type="submit" value="Delete" class="btn btn-danger" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
    </div>
}
