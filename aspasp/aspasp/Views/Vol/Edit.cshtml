@model Aeroport.Models.Vol

@{
    ViewBag.Title = "Edit flight";
}

<h2>Edit flight</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id) 

    <div class="form-horizontal">
        <h4>flight</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.VilleDepart, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.VilleDepart, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.VilleDepart)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VilleArrivee, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.VilleArrivee, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.VilleArrivee)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DateVol, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DateVol, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", type = "datetime-local" })
                @Html.ValidationMessageFor(model => model.DateVol)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Airplane", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("AvionId", null, "-- Sélectionner un avion --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AvionId)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Pilot", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PiloteId", null, "-- Sélectionner un pilote --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PiloteId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
                @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
}
